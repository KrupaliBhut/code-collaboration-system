<body>
    <form method="post" action="/repolist" enctype="multipart/form-data">
        <a id="backbtn" href="#" class="bi bi-arrow-return-left">back</a>
          <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
              <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                  <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                      <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Create Repository</h3>
                     
          
                        <div class="row">
                          <div class="col-md-6 mb-4">
          
                            <div class="form-outline">
                              <label class="form-label" for="name">name</label>
                              <input type="text" id="name" name="name" class="form-control form-control-lg" />
                            
                            </div>
          
                          </div>
                          <div class="col-md-6 mb-4">
          
                            <div class="form-outline">
                              <label class="form-label" for="description">description</label>
                              <input type="text" id="description" name="description"  class="form-control form-control-lg" />
                            </div>
                          </div>
                          <div class="col-md-6 mb-4">
          
                            <div class="form-outline">
                              <label for="isPublic" class="form-label"> isPublic:</label>
                              <input type="radio" id="isPublic" name="isPublic" value="true" checked />
                              <input type="radio" id="isPublic" name="isPublic" value="false"  />


                              <!-- <label class="form-label" for="lastName">IsPublic</label>
                              <input type="text" name="description" id="description" class="form-control form-control-lg" /> -->
                            </div>
                          </div>
                          <div class="col-md-6 mb-4">
          
                            <div class="form-outline">
                              <label class="form-label" for="privateValue">privateValue</label>
                              <input type="text" id="privateValue" name="privateValue" class="form-control form-control-lg" />
                            </div>
                          </div>
                          

                          <div class="mt-4 pt-2">
                            <input class="btn btn-primary btn-lg" type="submit" value="Submit" onclick="return addrepo()"/>
                          </div>
                        </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </form>
